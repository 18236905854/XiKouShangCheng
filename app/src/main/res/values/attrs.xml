<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- 自定义View   SlidingLayout -->
    <declare-styleable name="izd_SlidingLayout">
        <attr name="background_view" format="reference"/>
        <attr name="sliding_mode" format="enum">
            <enum name="both" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="sliding_pointer_mode" format="enum">
            <enum name="one" value="0"/>
            <enum name="more" value="1"/>
        </attr>
        <attr name="top_max" format="dimension"/>
    </declare-styleable>

    <!--弧形view定义的属性-->
    <attr name="arcHeight" format="dimension"/>

    <declare-styleable name="ArcView">
        <attr name="arcHeight"/>
        <attr name="bgColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ArcImageView">
        <attr name="arcHeight"/>
    </declare-styleable>

    <!--HorizontalProgressBar start-->
    <attr name="backgroundColor" format="color"></attr>
    <attr name="progressColor" format="color"></attr>
    <attr name="maxProgress" format="integer"></attr>
    <attr name="progress" format="integer"></attr>
    <attr name="animDuration" format="integer"></attr>

    <declare-styleable name="HorizontalProgressBar">
        <attr name="backgroundColor"></attr>
        <attr name="progressColor"></attr>
        <attr name="maxProgress"></attr>
        <attr name="progress"></attr>
        <attr name="animDuration"></attr>
    </declare-styleable>
    <!--HorizontalProgressBar end-->

    <!--sku 标签-->
    <declare-styleable name="FlowLayout">
        <attr name="flow" format="boolean"/>
        <attr name="childSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="childSpacingForLastRow" format="enum|dimension">
            <enum name="auto" value="-65536"/>
            <enum name="align" value="-65537"/>
        </attr>
        <attr name="rowSpacing" format="enum|dimension">
            <enum name="auto" value="-65536"/>
        </attr>
        <attr name="rtl" format="boolean"/>
        <attr name="maxRows" format="integer"/>
    </declare-styleable>

    <!--仿微信支付密码-->
    <declare-styleable name="PayPwdInputView">
        <attr name="maxCount" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="bottomLineColor" format="color" />
        <attr name="pwdRadius" format="dimension" />
        <attr name="divideLineWidth" format="dimension" />
        <attr name="divideLineColor" format="color" />
        <attr name="rectAngle" format="dimension" />
        <attr name="isPwd" format="boolean" />
        <attr name="autoSize" format="boolean" />
        <attr name="psdType" format="enum">
            <enum name="weChat" value="0" />
            <enum name="bottomLine" value="1" />
            <enum name="block" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProgressbar">
        <attr name="cpb_progress" format="float"/>
        <attr name="cpb_backgroundProgressWidth" format="integer"/>
        <attr name="cpb_foregroundProgressWidth" format="integer"/>
        <attr name="cpb_backgroundProgressColor" format="color"/>
        <attr name="cpb_foregroundProgressColor" format="color"/>
        <attr name="cpb_roundedCorner" format="boolean"/>
        <attr name="cpb_touchEnabled" format="boolean"/>
        <attr name="cpb_clockwise" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="leftMargin" format="dimension" />
        <attr name="rightMargin" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="defaultDotColor" format="color" />
        <attr name="highDotColor" format="color" />
        <attr name="dotPosition" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
        </attr>
        <attr name="defaultDotDrawable" format="reference" />
        <attr name="highDotDrawable" format="reference" />
    </declare-styleable>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.xk.mall.view.widget.VerticalTextView
        android:layout_width="20dp"
        android:text="@string/designer_circle_right_left"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="33dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_circle_head"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="22dp"
            android:layout_height="260dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_circle_designer"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_18sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:text="@string/designer_circle_designer"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_circle_designer_name"
                android:layout_below="@id/tv_circle_designer"
                android:layout_width="wrap_content"
                android:text="蔡子慧"
                android:layout_marginTop="7dp"
                android:textSize="12sp"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_plus"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/tv_circle_designer_msg"
                android:text="1672"
                android:layout_below="@id/tv_circle_designer_name"
                android:drawableLeft="@drawable/custom_msg"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:drawablePadding="4dp"
                android:textSize="@dimen/text_12sp"
                android:textColor="#999999"
                android:layout_marginRight="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_circle_designer_love"
                android:layout_width="wrap_content"
                android:text="2568"
                android:layout_below="@id/tv_circle_designer_name"
                android:layout_toRightOf="@id/tv_circle_designer_msg"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="20dp"
                android:drawablePadding="4dp"
                android:textSize="@dimen/text_12sp"
                android:textColor="#999999"
                android:drawableLeft="@drawable/custom_love"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
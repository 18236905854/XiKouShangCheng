<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_new_product_head"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_new_product"
                android:layout_height="180dp" />

            <!--11-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="-23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_home_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="19dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="大牌上新"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/color_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="新品大牌抢鲜报道"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="#999999"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/new_one"
                            android:layout_gravity="center"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="上新1款"
                            android:textSize="9sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/new_two"
                            android:layout_gravity="center"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="上新6款"
                            android:textSize="9sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/new_three"
                            android:layout_gravity="center"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="上新3款"
                            android:textSize="9sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/new_four"
                            android:layout_gravity="center"
                            android:layout_height="35dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="上新6款"
                            android:textSize="9sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#999999"
                            android:gravity="center"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
            <!--22-->


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_new_product_title"
                    android:layout_width="wrap_content"
                    android:text="上新推荐"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/color_text"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="猜你喜爱的折扣新美物"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_new_product"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
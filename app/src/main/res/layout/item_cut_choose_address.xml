<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="95dp">

    <TextView
        android:id="@+id/tv_cut_address_name"
        android:layout_width="wrap_content"
        android:text="刘江"
        android:textSize="15sp"
        android:textColor="@color/color_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="29dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cut_address_phone"
        android:layout_width="wrap_content"
        android:text="13066979652"
        android:textSize="15sp"
        android:layout_alignBaseline="@id/tv_cut_address_name"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_text"
        android:layout_toRightOf="@id/tv_cut_address_name"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_cut_choose_address_address"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_cut_address_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        android:textColor="@color/color_text"
        android:text="湖南省长沙岳麓区金星北路123号"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="8dp"
        android:src="@drawable/setting_icon_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="14dp" />

    <View
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="0.5dp"/>

</RelativeLayout>
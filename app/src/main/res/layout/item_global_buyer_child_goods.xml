<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home_cardview"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/rl_goods_logo"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_global_child_logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:id="@+id/iv_goods_empty"
            android:layout_width="60dp"
            android:visibility="gone"
            android:src="@drawable/ic_goods_empty"
            android:layout_centerInParent="true"
            android:layout_height="60dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_toRightOf="@id/rl_goods_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_global_child_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444"
            android:layout_marginRight="@dimen/dp_15"
            tools:text="酷尔纳斯主持人晚装宴会小礼服女新款夏蓬蓬裙无袖"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#F94119"
                android:textSize="9sp"
                android:background="@drawable/bg_global_dotted"
                android:text="券"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_global_child_coupon"
                android:layout_width="wrap_content"
                android:text="460"
                android:background="@drawable/bg_global_dotted_money"
                android:textColor="#F94119"
                android:textSize="9sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:text="@string/money"
                    android:textStyle="bold"
                    android:textColor="#F94119"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_global_child_price"
                    android:text="152"
                    android:textStyle="bold"
                    android:textColor="#F94119"
                    android:textSize="17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_global_child_line_price"
                    android:text="399"
                    android:layout_marginLeft="7dp"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_buy"
                android:background="@drawable/bg_many_share_money"
                android:textSize="@dimen/text_12sp"
                android:textColor="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:text="立即抢购"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line"
        android:visibility="gone"/>

</RelativeLayout>

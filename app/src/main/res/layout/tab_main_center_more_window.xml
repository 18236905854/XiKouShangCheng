<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/more_window_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        android:drawableTop="@drawable/tab_center_more_made"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:textColor="#BB9445"
        android:text="定制拼团"/>

    <TextView
        android:id="@+id/more_window_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/more_window_collect"
        android:drawablePadding="6dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textColor="#BB9445"
        android:drawableTop="@drawable/tab_center_more_give"
        android:gravity="center"
        android:text="定制馆"/>

    <TextView
        android:id="@+id/more_window_external"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:visibility="invisible"
        android:layout_alignBaseline="@id/more_window_collect"
        android:drawableTop="@drawable/tab_center_more_designer"
        android:gravity="center"
        android:textColor="#BB9445"
        android:drawablePadding="6dp"
        android:text="设计师圈"/>

    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_below="@+id/more_window_auto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/tab_center_more_close" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cha"
            android:src="@mipmap/ic_dialog_cha"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:layout_width="0.4dp"
            android:layout_height="22dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_near_cardview"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="恭喜您发起砍价"
                android:layout_gravity="center"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="#E4E4E4"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="0.5dp"/>

            <TextView
                android:id="@+id/tv_dialog_help_num"
                android:layout_width="wrap_content"
                android:text="分享给好友，获得0人助力"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/color_text"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="即可获得底价购物"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="32dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_share_cut_wechat"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_cut_share_wechat"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="微信分享"
                        android:textColor="#999999"
                        android:layout_marginTop="8dp"
                        android:textSize="10sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_cut_circle"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_cut_share_circle"
                        android:layout_gravity="center"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="朋友圈分享"
                        android:textColor="#999999"
                        android:layout_marginTop="8dp"
                        android:textSize="10sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_share_cut_sina"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="40dp"
                        android:src="@drawable/ic_cut_share_sina"
                        android:layout_height="40dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="新浪分享"
                        android:layout_marginTop="8dp"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

</RelativeLayout>

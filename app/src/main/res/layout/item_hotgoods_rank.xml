<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_near_cardview"
    android:layout_marginBottom="10dp">


    
    <RelativeLayout
        android:id="@+id/rl_left"
        android:layout_width="110dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_rank_num"
        android:layout_width="30dp"
        android:background="@mipmap/ic_rank_one"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="19dp">

        <TextView
            android:id="@+id/tv_rank_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_12sp"
            android:layout_centerVertical="true"
            android:text="1"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:gravity="center" />

    </RelativeLayout>

    <LinearLayout
        android:layout_toRightOf="@id/rl_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#444444"
            android:textSize="@dimen/text_14sp"
            android:layout_marginRight="@dimen/dp_15"
            android:text="酷尔纳斯主持人晚装宴会小礼服女新款夏蓬蓬裙无袖"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!--爆品折扣-->
        <TextView
            android:id="@+id/tv_discount_and_people"
            android:background="@drawable/bg_hot_kanlide"
            android:layout_marginTop="8dp"
            tools:text="最低3折"
            android:textColor="#F94119"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <!--喜赚榜-->
        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#F94119"
                android:textSize="9sp"
                android:background="@drawable/bg_global_dotted"
                android:text="券"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:text="460"
                android:background="@drawable/bg_global_dotted_money"
                android:textColor="#F94119"
                android:textSize="9sp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line_price"
            android:layout_marginTop="10dp"
            tools:text="399"
            android:textColor="#CCCCCC"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <TextView
                android:text="@string/money"
                android:textStyle="bold"
                android:textColor="#F94119"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price"
                android:text="152"
                android:textStyle="bold"
                android:textColor="#F94119"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_forward_num"
                android:textSize="@dimen/text_12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
               android:layout_centerVertical="true"
                android:text="转发1000+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>

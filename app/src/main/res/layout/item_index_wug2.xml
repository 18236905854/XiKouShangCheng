<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_wug_goods"
                android:layout_width="78dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/dp_5"
                android:src="@drawable/ic_loading"/>

            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="稻草人女包2019新款时尚百搭可爱..."
                android:textColor="#444444"
                android:textSize="12sp" />


                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="#EF421C"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="222"
                        android:textColor="#EF421C"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_gift_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_gift_coupon"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="1dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="1dp"
                    android:text="赠券200"
                    android:textColor="#F94119"
                    android:textSize="9sp"
                    android:layout_marginBottom="22dp"/>


        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_width="0.5dp"
            android:layout_height="96dp"
            android:layout_toRightOf="@id/ll"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="#ff0000"
            android:visibility="gone"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/layoutContent">

    <include layout="@layout/base_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="#F4F4F4">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_near_cardview"
                    android:gravity="center"
                    android:orientation="vertical">
                    <!--订单号-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="订单号"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#ff999999"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>


                    <!--商品-->
                    <RelativeLayout
                        android:id="@+id/rl_goods_name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="商品"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="wrap_content"
                            android:maxLines="2"
                            android:layout_marginLeft="40dp"
                            android:ellipsize="end"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#ff999999"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>


                    <!--订单金额-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="订单金额"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#ff999999"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>


                    <!--赠送优惠券-->
                    <RelativeLayout
                        android:id="@+id/rl_goods_coupon"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:id="@+id/tv_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="赠送优惠券"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_gift_coupon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="#ff999999"
                            android:textSize="13sp"
                            />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/bg_near_cardview"
                    android:orientation="vertical">

                    <TextView
                        android:text="支付方式"
                        android:textColor="#444444"
                        android:textSize="@dimen/text_16sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <!--红包支付-->
                    <RelativeLayout
                        android:id="@+id/rl_pay_red"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        >
                        <TextView
                            android:drawableLeft="@mipmap/ic_pay_red"
                            android:layout_marginLeft="20dp"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="钱包支付"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <CheckBox
                            android:id="@+id/ck_pay_red"
                            android:layout_marginRight="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_cb"
                            android:button="@null"
                            android:enabled="false"
                            android:clickable="false"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>

                    <!--微信支付-->
                    <RelativeLayout
                        android:id="@+id/rl_pay_wechat"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                       >
                        <TextView
                            android:drawableLeft="@mipmap/ic_pay_wechat"
                            android:layout_marginLeft="20dp"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="微信支付"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <CheckBox
                            android:id="@+id/ck_pay_wechat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_cb"
                            android:button="@null"
                            android:enabled="false"
                            android:clickable="false"
                            android:layout_marginRight="20dp"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>

                    <!--支付宝支付-->
                    <RelativeLayout
                        android:id="@+id/rl_pay_zfb"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"

                        >
                        <TextView
                            android:drawableLeft="@mipmap/ic_pay_zfb"
                            android:layout_marginLeft="20dp"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="支付宝支付"
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <CheckBox
                            android:id="@+id/ck_pay_zfb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_cb"
                            android:button="@null"
                            android:enabled="false"
                            android:clickable="false"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"/>

                    <!--银行卡支付 -->
                    <RelativeLayout
                        android:id="@+id/rl_pay_bank"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="60dp"

                        android:layout_marginBottom="4dp">
                        <TextView
                            android:drawableLeft="@mipmap/ic_pay_bank"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="银行卡支付 "
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <CheckBox
                            android:id="@+id/ck_pay_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_cb"
                            android:button="@null"
                            android:enabled="false"
                            android:clickable="false"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line"
                        android:visibility="gone"/>

                    <!--朋友代付  -->
                    <RelativeLayout
                        android:id="@+id/rl_pay_friend"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="gone">
                        <TextView
                            android:drawableLeft="@mipmap/ic_pay_friend"
                            android:drawablePadding="10dp"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="朋友代付  "
                            android:textColor="#ff444444"
                            android:textSize="13sp"
                            />
                        <CheckBox
                            android:id="@+id/ck_pay_friend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_cb"
                            android:button="@null"
                            android:enabled="false"
                            android:textColor="#ff999999"
                            android:textSize="13sp" />
                    </RelativeLayout>





                </LinearLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计金额:"
                    android:textColor="#ff444444"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="¥"
                    android:textColor="#fff94119"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_total_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="399"
                    android:textColor="#fff94119"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_pay_order"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:stateListAnimator="@null"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_wugdetail_buy"
                android:text="支付金额 ¥0"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
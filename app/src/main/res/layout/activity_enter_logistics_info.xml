<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_merchant"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingLeft="@dimen/dp_20"
                android:background="@color/colorWhite"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_merchant_note"
                        android:layout_width="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_merchant_note"
                        android:layout_height="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="商家备注信息"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_text"
                        android:layout_toRightOf="@id/iv_merchant_note"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <TextView
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:id="@+id/tv_merchant_note"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_height="60dp">

                <TextView
                    android:text="物流公司"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.xk.mall.view.widget.ClearEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_logistic_name"
                    android:background="@null"
                    android:hint="请填写物流公司"
                    android:textSize="@dimen/text_14sp"
                    android:textColorHint="#CCCCCC"
                    android:textColor="@color/color_text"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:layout_height="60dp">

                <TextView
                    android:text="物流单号"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/text_14sp"
                    android:textColor="@color/color_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.xk.mall.view.widget.ClearEditText
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:id="@+id/et_logistic_no"
                    android:hint="请填写物流单号"
                    android:textSize="@dimen/text_14sp"
                    android:textColorHint="#CCCCCC"
                    android:textColor="@color/color_text"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="提交"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/bg_register_btn_selector"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>
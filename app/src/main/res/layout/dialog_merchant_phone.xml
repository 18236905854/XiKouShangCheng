<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cha"
            android:src="@mipmap/ic_dialog_cha"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:layout_width="0.4dp"
            android:layout_height="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="48dp"
        android:background="@drawable/bg_near_cardview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:text="联系商家客服"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_text"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="客服1"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_merchant_phone"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_merchant_phone_one"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/text_14sp"
                android:textColor="#2F85F9"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_merchant_phone_two"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginTop="26dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="客服2"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:drawableLeft="@drawable/ic_merchant_phone"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_merchant_phone_two"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:textSize="@dimen/text_14sp"
                android:textColor="#2F85F9"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

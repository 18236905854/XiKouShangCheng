<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_designer_child"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="335dp"/>


    <TextView
        android:id="@+id/tv_work_name"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="作品名，我的姑娘"
        android:layout_below="@id/rv_designer_child"
        android:textStyle="bold"
        android:textColor="#444444"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_designer_content"
        android:layout_width="match_parent"
        android:layout_below="@id/tv_work_name"
        android:layout_marginTop="7dp"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_14sp"
        android:lineSpacingExtra="6dp"
        android:text="我从来都以为, 少女心是一个女性需要终身拥有的东西 它能阻止你变得俗气、势利。"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tv_designer_content"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_designer_time"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_12sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_designer_love"
            android:layout_width="wrap_content"
            android:text="2568"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:textSize="@dimen/text_12sp"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/custom_love"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_designer_msg"
            android:layout_toLeftOf="@id/tv_designer_love"
            android:text="1672"
            android:drawableLeft="@drawable/custom_msg"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:textSize="@dimen/text_12sp"
            android:textColor="#999999"
            android:layout_marginRight="45dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#E4E4E4"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

</RelativeLayout>
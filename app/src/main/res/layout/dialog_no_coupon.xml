<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cha"
            android:src="@mipmap/ic_dialog_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:layout_width="0.4dp"
            android:layout_height="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_near_cardview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/global_buyer_no_coupon"
            android:textColor="#444444"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_submit"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="25dp"
            android:layout_width="205dp"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_confrim_operation"
            android:text="@string/global_buyer_go"
            android:layout_height="42dp" />


    </LinearLayout>

</RelativeLayout>

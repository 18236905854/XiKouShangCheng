<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="推荐人联系电话"
            android:textSize="15sp"
            android:textColor="@color/color_text"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_commend_phone"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:layout_toLeftOf="@id/iv_commend_phone"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:textColor="#CCCCCC"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_commend_phone"
            android:layout_width="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_commend_phone"
            android:layout_height="20dp" />

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_height="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="所属城市运营商联系电话"
            android:textSize="15sp"
            android:textColor="@color/color_text"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_commend_city_phone"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:layout_centerVertical="true"
            android:textColor="#CCCCCC"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_alignParentBottom="true"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


</LinearLayout>
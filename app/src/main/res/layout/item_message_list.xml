<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="9dp"
    android:background="@drawable/bg_near_cardview"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message_list_title"
        android:layout_width="wrap_content"
        android:textColor="@color/color_text"
        android:textSize="15sp"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@id/tv_message_list_read"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_message_list_content"
        android:layout_below="@id/tv_message_list_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_12sp"
        android:textColor="#999999"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_message_list_read"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:text="未读"
        android:paddingLeft="5dp"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_3"
        android:paddingBottom="2dp"
        android:background="@drawable/bg_msg_unread"
        android:textColor="#F94119"
        android:textSize="9sp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line_message_list"
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_message_list_content"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/line_message_list"
        android:layout_height="40dp">
        
        <TextView
            android:id="@+id/tv_message_list_time"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="#CCCCCC"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/message_detail"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:textColor="#BB9445"
            android:drawableRight="@drawable/ic_message_list_arrow"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_near_cardview"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="50dp">


        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旺顺阁鱼头泡饼（梅溪新天地店)"
            android:textColor="#ff444444"
            android:textSize="15sp"
            />

        <ImageView
            android:src="@mipmap/ic_right"
            android:layout_toRightOf="@id/tv_shop_name"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_status"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="已完成"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/line"
           android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_loading"/>
        
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_shop"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_xiaofei_money"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="消费金额: ¥260.00"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_coupon_money"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="优惠券支付: ¥20.00"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_real_money"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="实付金额: ¥240.00"
                android:textColor="#ff444444"
                android:textSize="12sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv_address"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textColor="#999999"
            android:text="岳麓区"
            android:textSize="10sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shop_type"
            android:layout_toRightOf="@id/tv_address"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:text="美食餐饮 "
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2019-06-22 "
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
    </RelativeLayout>

</LinearLayout>



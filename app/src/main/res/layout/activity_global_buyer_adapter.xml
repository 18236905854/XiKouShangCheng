<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="165dp"
    android:layout_marginTop="25dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_global_logo"
        android:scaleType="centerCrop"
        android:layout_width="165dp"
        android:layout_height="165dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/tv_global_name"
        android:maxLines="2"
        android:textSize="@dimen/text_12sp"
        android:textColor="@color/color_text"
        android:layout_marginTop="10dp"
        android:layout_height="@dimen/dp_30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#F94119"
            android:textSize="9sp"
            android:background="@drawable/bg_global_dotted"
            android:text="券"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_global_coupon"
            android:layout_width="wrap_content"
            android:text="460"
            android:background="@drawable/bg_global_dotted_money"
            android:textColor="#F94119"
            android:textSize="9sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="9dp"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/tv_global_money"
            android:layout_width="wrap_content"
            android:text="@string/money"
            android:textColor="#F94119"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_global_now_price"
            android:layout_width="wrap_content"
            android:text="399"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_global_money"
            android:textColor="#F94119"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_global_real_price"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="#CCCCCC"
            android:text="￥999"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_global_now_price"
            android:layout_marginTop="6dp"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
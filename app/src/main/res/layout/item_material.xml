<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_material_head"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="4dp"
            android:src="@drawable/ic_material_tip"
            android:layout_height="18dp"
            />

       <TextView
           android:id="@+id/tv_material_time"
           android:layout_width="wrap_content"
           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="8dp"
           android:layout_centerVertical="true"
           android:textSize="@dimen/text_12sp"
           android:textColor="@color/color_text"
           android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_material_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/text_14sp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/color_text"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_material_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        tools:text="因为工作需要，常常会搜集创意灵感和视觉呈现， 丰富的素材帮助我减轻很多负担。"
        android:textColor="#999999"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        />

    <com.xk.mall.view.widget.MultiImageView
        android:id="@+id/multiImageView"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.xk.mall.view.widget.MultiImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_material_share"
            android:layout_width="90dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_material_share"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_material_share"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="分享"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textSize="@dimen/text_12sp"
                android:textColor="#E52024"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_material_save"
            android:layout_width="105dp"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/ll_material_share"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_material_other"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_material_save"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="一键保存"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:textSize="@dimen/text_12sp"
                android:textColor="#999999"
                android:layout_height="35dp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_material"
        android:layout_width="match_parent"
        android:background="#F4F4F4"
        android:layout_height="1dp"/>

</LinearLayout>

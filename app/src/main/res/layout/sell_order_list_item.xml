<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@drawable/bg_order_list_item"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sell_order_merchant_name"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_text"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_sell_end_time"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="#4A4A4A"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_marginTop="13dp"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_sell_order_logo"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_sell_order_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_sell_order_logo"
                android:layout_marginRight="@dimen/dp_20"
                android:maxLines="2"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_sell_real_price"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_sell_order_logo"
                android:layout_below="@id/tv_sell_order_name"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

            <!--<TextView-->
                <!--android:id="@+id/tv_sell_order_discount_price"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:textSize="10sp"-->
                <!--android:textColor="#999999"-->
                <!--android:layout_below="@id/tv_sell_order_name"-->
                <!--android:layout_toRightOf="@id/tv_sell_real_price"-->
                <!--android:layout_marginLeft="@dimen/dp_15"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_height="wrap_content" />-->

            <!--<TextView-->
                <!--android:id="@+id/tv_sell_order_discount_coupon"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:textSize="10sp"-->
                <!--android:textColor="#999999"-->
                <!--android:layout_below="@id/tv_sell_order_name"-->
                <!--android:layout_toRightOf="@id/tv_sell_order_discount_price"-->
                <!--android:layout_marginLeft="@dimen/dp_15"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_height="wrap_content" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sell_list_left"
                android:layout_width="75dp"
                android:layout_toLeftOf="@id/tv_sell_list_center"
                android:text="给好友购买"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_4a"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/tv_sell_list_center"
                android:layout_width="75dp"
                android:layout_toLeftOf="@id/tv_sell_list_right"
                android:text="寄卖到吾G"
                android:gravity="center"
                android:layout_marginRight="6dp"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_4a"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/tv_sell_list_right"
                android:layout_width="75dp"
                android:layout_alignParentRight="true"
                android:text="发货"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_black"
                android:layout_height="29dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
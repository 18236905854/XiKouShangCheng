<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include
            layout="@layout/base_tool_bar"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/img_pay_status"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="74dp"
            android:src="@drawable/ic_loading" />

        <TextView
            android:id="@+id/tv_pay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="支付失败 "
            android:textColor="#ff444444"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pay_coupon"
            android:textSize="@dimen/text_12sp"
            android:textColor="#999999"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:stateListAnimator="@null"
            android:layout_marginTop="44dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/bg_back_home"
            android:text="返回首页"
            android:textColor="#444444"
            android:textSize="@dimen/text_14sp" />


        <Button
            android:id="@+id/btn_to_do"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:stateListAnimator="@null"
            android:background="@drawable/bg_login_btn"
            android:text="重新支付"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F4F4F4"/>

        <RelativeLayout
            android:id="@+id/rl_title_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="17sp"
                android:textColor="#444444"
                android:text="喜立得"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_title_des"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/tv_title"
                android:textColor="#999999"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:text="分享好友 砍价得红包"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_goods1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@mipmap/img_wug_four"/>

                <TextView
                    android:id="@+id/tv_goodsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="稻草人女包2019新款时尚百搭可爱..."
                    android:textColor="#444444"
                    android:textSize="@dimen/text_12sp" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="@color/price"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textColor="@color/price"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/tv_line_price"
                        android:layout_marginLeft="5dp"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:text="¥¥2222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line" />

            <!--2-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_goods2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@mipmap/img_wg_2"/>

                <TextView
                    android:id="@+id/tv_goodsName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="稻草人女包2019新款时尚百搭可爱..."
                    android:textColor="#444444"
                    android:textSize="@dimen/text_12sp" />


                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="@color/price"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textColor="@color/price"
                        android:textSize="@dimen/text_14sp" />
                    <TextView
                        android:id="@+id/tv_line_price2"
                        android:layout_marginLeft="5dp"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:text="¥2222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/line" />


            <!-- 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_goods3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@mipmap/img_wg_3"/>

                <TextView
                    android:id="@+id/tv_goodsName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="稻草人女包2019新款时尚百搭可爱..."
                    android:textColor="#444444"
                    android:textSize="@dimen/text_12sp" />



                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/money"
                        android:textColor="@color/price"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="222"
                        android:textColor="@color/price"
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/tv_line_price3"
                        android:layout_marginLeft="5dp"
                        android:textColor="#CCCCCC"
                        android:textSize="10sp"
                        android:text="¥2222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <!-- end 3-->
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
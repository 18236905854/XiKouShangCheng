<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cha"
            android:src="@mipmap/ic_dialog_cha"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:layout_width="0.4dp"
            android:layout_height="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_near_cardview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:text="包邮范围"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="@dimen/text_16sp"
            android:textColor="@color/color_text"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:lineSpacingExtra="1.2dp"
            android:text="除以下地区，全国范围内包邮。
新疆、西藏、海南、宁夏、青海、内蒙古以及港澳台、海外暂不支持发货，如果有需要，请联系客服。"
            android:textColor="#444444"/>

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_submit"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="25dp"
            android:layout_width="205dp"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/white"
            android:stateListAnimator="@null"
            android:background="@drawable/bg_register_btn_selector"
            android:text="知道了"
            android:layout_height="42dp" />


    </LinearLayout>

</RelativeLayout>

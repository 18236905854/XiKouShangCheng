<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_near_cardview"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="260dp">

    <TextView
        android:id="@+id/tv_near_item_title"
        android:layout_width="wrap_content"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_16sp"
        android:layout_marginTop="21dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_near_item_discount"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:textSize="@dimen/text_12sp"
        android:textColor="#BB9445"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_near_item_distance"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_near_item_title"
        android:textSize="10sp"
        android:textColor="#999999"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/tv_near_item_distance"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_near_item_large"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_near_item_top"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/iv_near_item_down"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
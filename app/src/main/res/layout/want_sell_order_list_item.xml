<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@drawable/bg_order_list_item"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_want_sell_order_shop_name"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_text"
                android:text="韩优尚旗舰店"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_want_sell_order_type"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待付款"
                android:textColor="#F94119"
                android:textSize="@dimen/text_12sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_marginTop="13dp"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_want_sell_order_logo"
                android:layout_width="70dp"
                android:src="@drawable/ic_activity_global_item_one"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_want_sell_order_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_want_sell_order_logo"
                android:layout_marginRight="@dimen/dp_20"
                android:maxLines="2"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="6dp"
                android:text="酷尔纳斯主持人晚装宴会酷尔纳斯主持人晚装宴会…"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_want_sell_real_price"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_want_sell_order_logo"
                android:layout_below="@id/tv_want_sell_order_name"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_marginLeft="10dp"
                android:text="原价:¥500"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_want_sell_order_discount_price"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="#999999"
                android:layout_below="@id/tv_want_sell_order_name"
                android:layout_toRightOf="@id/tv_want_sell_real_price"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="10dp"
                android:text="折扣价¥300"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_want_sell_coupon"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="#999999"
                android:layout_below="@id/tv_want_sell_order_name"
                android:layout_toRightOf="@id/tv_want_sell_order_discount_price"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="10dp"
                android:text="优惠券¥300"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_want_sell_end_time"
                android:layout_width="wrap_content"
                android:text="剩余时间:2天23小时36分"
                android:textSize="10sp"
                android:textColor="@color/color_text"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

            <!--<cn.iwgang.countdownview.CountdownView-->
                <!--android:id="@+id/count_want_sell"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_toRightOf="@id/tv_want_sell_end_time"-->
                <!--android:layout_centerVertical="true"-->
                <!--app:isConvertDaysToHours="false"-->
                <!--app:isShowDay="true"-->
                <!--app:suffixGravity="center"-->
                <!--app:isShowHour="true"-->
                <!--app:isShowMinute="true"-->
                <!--app:isShowSecond="false"-->
                <!--app:suffixDay="天"-->
                <!--app:suffixHour="时"-->
                <!--app:suffixMinute="分"-->
                <!--app:suffixTextColor="@color/color_text"-->
                <!--app:suffixTextSize="10sp"-->
                <!--app:timeTextSize="10sp"-->
                <!--app:timeTextColor="@color/color_text"-->
                <!--android:layout_height="wrap_content" />-->

            <TextView
                android:id="@+id/tv_want_sell_list_right"
                android:layout_width="75dp"
                android:layout_alignParentRight="true"
                android:text="寄卖"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_want_sell"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/tv_want_sell_list_center"
                android:layout_width="75dp"
                android:layout_toLeftOf="@id/tv_want_sell_list_right"
                android:text="发货"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:textColor="#4A4A4A"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_want_self"
                android:layout_height="29dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
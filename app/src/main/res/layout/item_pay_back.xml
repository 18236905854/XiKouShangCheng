<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_order_list_item"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_list_shopName"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_list_type"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:textColor="#F94119"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_marginTop="14dp"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_order_list_logo"
            android:layout_width="70dp"
            android:scaleType="centerCrop"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tv_order_list_name"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_order_list_logo"
            android:layout_toLeftOf="@id/tv_order_list_money"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_list_money"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_list_num"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_order_list_money"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_list_sku"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_order_list_name"
            android:layout_alignLeft="@id/tv_order_list_name"
            android:layout_toLeftOf="@id/tv_order_list_num"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_order_list_pay_amount"
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:background="#F7F7F7"
            android:textColor="#F2641E"
            tools:text="退款金额"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/iv_order_list_logo"
            android:layout_height="27dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/tv_order_list_pay_amount"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_list_right"
                android:layout_width="75dp"
                android:layout_alignParentRight="true"
                android:text="取消退款"
                android:gravity="center"
                android:textColor="#999999"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_gray"
                android:layout_height="29dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0dp"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_coupon"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_coupon_item_icon"
            android:layout_width="40dp"
            android:src="@drawable/coupon_icon"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_coupon_item_money"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_coupon_item_icon"
            android:layout_marginLeft="15dp"
            android:textSize="22sp"
            android:text="500"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coupon_item_money_tip"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/tv_coupon_item_money"
            android:layout_alignBaseline="@id/tv_coupon_item_money"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:text="@string/coupon_money_tip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coupon_item_sum_money"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/tv_coupon_item_money_tip"
            android:layout_alignBaseline="@id/tv_coupon_item_money"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coupon_item_time"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_coupon_item_icon"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tv_coupon_item_sum_money"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />
        
        <View
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:id="@+id/line_coupon"
            android:layout_toRightOf="@id/iv_coupon_item_icon"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tv_coupon_item_time"
            android:layout_marginTop="15dp"
            android:alpha="0.4"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="0.5dp"/>

        <TextView
            android:id="@+id/tv_coupon_rang"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_coupon_item_icon"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/line_coupon"
            android:layout_marginTop="12dp"
            android:text="@string/coupon_range"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coupon_transfer"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_coupon_item_icon"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/tv_coupon_rang"
            android:textSize="10sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_coupon_item_detail"
            android:layout_width="wrap_content"
            android:text="转赠"
            android:textSize="10sp"
            android:background="@drawable/bg_coupon_detail"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_coupon_active"
            android:layout_width="64dp"
            android:visibility="gone"
            android:src="@drawable/ic_coupon_no_active"
            android:layout_alignParentRight="true"
            android:layout_height="64dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
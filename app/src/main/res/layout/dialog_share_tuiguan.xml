<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_share_title"
            android:layout_width="wrap_content"
            android:text="分享到好友"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_share_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_sku_close"/>

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="73dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_share_cut_wechat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cut_share_wechat"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="微信分享"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_cut_circle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_cut_share_circle"
                android:layout_gravity="center"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="朋友圈分享"
                android:textColor="#999999"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textSize="10sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share_cut_sina"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_cut_share_sina"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:text="微博分享"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:textColor="#999999"
                android:textSize="10sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
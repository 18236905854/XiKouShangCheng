<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:background="@drawable/bg_order_list_item"
        android:paddingBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_many_buy_order_list_title"
            android:layout_width="match_parent"
            android:layout_marginTop="13dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_many_buy_order_shop_name"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/color_text"
                android:text="韩优尚旗舰店"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_type"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待付款"
                android:textColor="#F94119"
                android:textSize="@dimen/text_12sp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="#E4E4E4"
            android:layout_marginTop="13dp"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_many_buy_order_logo"
                android:layout_width="70dp"
                android:src="@drawable/ic_activity_global_item_one"
                android:layout_height="70dp" />

            <TextView
                android:id="@+id/tv_many_buy_order_price"
                android:layout_width="wrap_content"
                android:text="￥58.00"
                android:textSize="@dimen/text_12sp"
                android:textStyle="bold"
                android:textColor="@color/color_text"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_num"
                android:layout_width="wrap_content"
                android:layout_below="@id/tv_many_buy_order_price"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:textColor="#999999"
                android:text="x2"
                android:layout_marginTop="7dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_name"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/iv_many_buy_order_logo"
                android:layout_toLeftOf="@id/tv_many_buy_order_price"
                android:layout_marginRight="@dimen/dp_20"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_text"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_sku"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="#999999"
                android:layout_toRightOf="@id/iv_many_buy_order_logo"
                android:layout_below="@id/tv_many_buy_order_name"
                android:layout_toLeftOf="@id/tv_many_buy_order_num"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_goods_xiadan_real_price"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/tv_many_buy_order_sku"
                android:layout_below="@id/tv_many_buy_order_name"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:visibility="gone"
                android:textColor="#999999"
                android:layout_marginLeft="8dp"
                android:text="原价:¥110.00"
                android:layout_alignBaseline="@id/tv_many_buy_order_sku"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_cart_discount"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:textColor="#F94119"
                android:textSize="10sp"
                android:layout_below="@id/tv_many_buy_order_sku"
                android:layout_toRightOf="@id/iv_many_buy_order_logo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:text="折扣:5折"
                android:background="@drawable/bg_hot_kanlide"
                android:paddingRight="4dp"
                android:paddingLeft="6dp"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_many_buy_order_list_num"
                android:layout_width="wrap_content"
                android:text="商品总计:3件"
                android:textSize="10sp"
                android:layout_toLeftOf="@id/tv_many_buy_order_list_money"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_list_money"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/tv_many_buy_order_list_postage"
                android:textSize="10sp"
                android:text="订单总额:¥139.00"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/color_text"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_many_buy_order_list_postage"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:text="邮费:¥2"
                android:textColor="@color/color_text"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_list_right"
                android:layout_width="75dp"
                android:layout_alignParentRight="true"
                android:text="立即付款"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_black"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/tv_order_list_center"
                android:layout_width="75dp"
                android:layout_toLeftOf="@id/tv_order_list_right"
                android:text="查看物流"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:textColor="#999999"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_gray"
                android:layout_height="29dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
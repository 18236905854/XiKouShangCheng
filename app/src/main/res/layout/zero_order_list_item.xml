            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@id/tv_order_list_money"-->
            <!--android:layout_marginTop="7dp"-->
            <!--android:layout_height="wrap_content" />-->


        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_order_list_name"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/tv_order_list_name">

            <TextView
                android:id="@+id/tv_market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场价:¥0"
                android:textSize="10sp"
                android:textColor="#999999"/>

            <!--<TextView-->
                <!--android:id="@+id/tv_pai_price"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="拍卖价:¥0"-->
                <!--android:textSize="10sp"-->
                <!--android:textColor="#999999"-->
                <!--android:layout_height="wrap_content" />-->


            <!--<TextView-->
                <!--android:id="@+id/tv_wochu_price_num"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="我出价:4次"-->
                <!--android:textSize="10sp"-->
                <!--android:textColor="#999999"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_total"
            android:layout_below="@id/ll_one"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_total"
                android:textSize="10sp"
                android:text="订单总额: ¥00.00"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_postage"
                android:textSize="10sp"
                android:text="运费:¥2"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_list_sku"
            android:layout_width="wrap_content"
            android:layout_below="@id/tv_order_list_name"
            android:layout_alignLeft="@id/tv_order_list_name"
            android:layout_marginTop="10dp"
            android:text="黑色  200ml"
            android:textSize="10sp"
            android:textColor="#999999"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/ll_order_total"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_order_list_right"
                android:layout_width="75dp"
                android:layout_alignParentRight="true"
                android:text="立即付款"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_black"
                android:layout_height="29dp" />

            <TextView
                android:id="@+id/tv_order_list_center"
                android:layout_width="75dp"
                android:layout_toLeftOf="@id/tv_order_list_right"
                android:text="查看物流"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:textColor="#999999"
                android:textSize="@dimen/text_12sp"
                android:background="@drawable/bg_btn_order_gray"
                android:layout_height="29dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_cha"
            android:src="@mipmap/ic_dialog_cha"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#E3E3E3"
            android:layout_gravity="center_horizontal"
            android:layout_width="0.4dp"
            android:layout_height="22dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_near_cardview"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:text="确认收货地址"
                android:layout_gravity="center"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/color_text"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:background="#E4E4E4"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="26dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_dialog_sure_address_name"
                    android:layout_width="wrap_content"
                    android:text="陈飞"
                    android:textSize="@dimen/text_13sp"
                    android:textColor="@color/color_text"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_dialog_sure_address_phone"
                    android:layout_width="wrap_content"
                    android:textColor="@color/color_text"
                    android:textSize="@dimen/text_13sp"
                    android:layout_marginLeft="10dp"
                    android:text="13066979652"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_13sp"
                android:textColor="@color/color_text"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="长沙市岳麓区金星北路123号"
                android:layout_height="wrap_content" />
            
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_submit"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="25dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_confrim_operation"
                android:text="确定"
                android:layout_height="42dp" />


        </LinearLayout>

</RelativeLayout>

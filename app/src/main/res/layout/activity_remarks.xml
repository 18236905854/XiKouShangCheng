<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F4F4F4"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/cardview_light_background"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:background="@null"
            android:id="@+id/et_remarks_content"
            android:minHeight="180dp"
            android:maxLength="50"
            android:padding="4dp"
            android:textColor="#888888"
            android:gravity="top"
            android:textSize="@dimen/text_13sp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_remarks_size"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/et_remarks_content"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="11dp"
            android:textSize="@dimen/text_12sp"
            android:text="0/50"
            android:textColor="#E1E0CD"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_remarks_sure"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/bg_register_btn_selector"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="40dp" />

</LinearLayout>
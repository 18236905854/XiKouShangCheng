<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <View
           android:layout_width="match_parent"
           android:layout_height="90dp"
           android:background="#444444"
           android:visibility="visible"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="14dp"
           android:layout_marginLeft="@dimen/dp_15"
           android:layout_marginRight="@dimen/dp_15"
           android:orientation="vertical"
           android:background="@drawable/bg_near_cardview">

           <RelativeLayout
               android:id="@+id/rl_order"
               android:layout_width="match_parent"
               android:background="?android:attr/selectableItemBackground"
               android:layout_height="85dp">

               <ImageView
                   android:id="@+id/img1"
                   android:layout_marginLeft="25dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/home_mes_order"/>

               <LinearLayout
                   android:layout_toRightOf="@id/img1"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:text="订单助手"
                       android:textStyle="bold"
                       android:textSize="15sp"
                       android:textColor="#444444"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_marginTop="6dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="支付、订单信息看这里"
                       android:textColor="#ff999999"
                       android:textSize="12sp"
                       />
               </LinearLayout>

               <TextView
                   android:id="@+id/tv_order_num"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:text="" />

           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/line"
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_marginRight="@dimen/dp_15"/>

           <RelativeLayout
               android:id="@+id/rl_activity"
               android:layout_width="match_parent"
               android:background="?android:attr/selectableItemBackground"
               android:layout_height="85dp">

               <ImageView
                   android:id="@+id/img2"
                   android:layout_marginLeft="25dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/home_mes_activity"/>

               <LinearLayout
                   android:layout_toRightOf="@id/img2"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:textStyle="bold"
                       android:text="活动消息"
                       android:textSize="15sp"
                       android:textColor="#444444"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginTop="6dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="最新活动、推荐信息看这里"
                       android:textColor="#ff999999"
                       android:textSize="12sp"
                       />
               </LinearLayout>

               <TextView
                   android:id="@+id/tv_activity_num"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:text="" />
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/line"
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_marginRight="@dimen/dp_15"/>


           <RelativeLayout
               android:id="@+id/rl_sys"
               android:layout_width="match_parent"
               android:background="?android:attr/selectableItemBackground"
               android:layout_height="85dp">

               <ImageView
                   android:id="@+id/img3"
                   android:layout_marginLeft="25dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/home_mes_sys"/>

               <LinearLayout
                   android:layout_toRightOf="@id/img3"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:textStyle="bold"
                       android:text="系统消息"
                       android:textSize="15sp"
                       android:textColor="#444444"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginTop="6dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="平台通知看这里"
                       android:textColor="#ff999999"
                       android:textSize="12sp"
                       />
               </LinearLayout>

               <TextView
                   android:id="@+id/tv_system_num"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:text="" />

           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/line"
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_marginRight="@dimen/dp_15"/>

           <RelativeLayout
               android:id="@+id/rl_notice"
               android:background="?android:attr/selectableItemBackground"
               android:layout_width="match_parent"
               android:layout_height="85dp">

               <ImageView
                   android:id="@+id/img4"
                   android:layout_marginLeft="25dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/home_mes_notice"/>

               <LinearLayout
                   android:layout_toRightOf="@id/img4"
                   android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:textStyle="bold"
                       android:text="公告"
                       android:textSize="15sp"
                       android:textColor="#444444"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginTop="6dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="公告通知看这里"
                       android:textColor="#ff999999"
                       android:textSize="12sp"
                       />
               </LinearLayout>

               <TextView
                   android:id="@+id/tv_notice_num"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_centerVertical="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="20dp"
                   android:text="" />
           </RelativeLayout>

       </LinearLayout>
   </RelativeLayout>

</LinearLayout>
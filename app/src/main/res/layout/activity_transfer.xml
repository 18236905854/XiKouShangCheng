<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F4F4F4"
    android:layout_height="match_parent">

    <include layout="@layout/base_tool_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="对方账号："
            android:layout_centerVertical="true"
            android:textColor="#4A4A4A"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_height="wrap_content" />

        <com.xk.mall.view.widget.ClearEditText
            android:id="@+id/et_transfer_phone"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="8dp"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:hint="请输入手机号"
            android:textSize="15sp"
            android:textColorHint="#CCCCCC"
            android:textColor="#4A4A4A"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_transfer_info"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_height="50dp">

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="#E4E4E4"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_transfer_logo"
                android:layout_width="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_transfer_name"
                android:textSize="15sp"
                android:textColor="@color/color_text"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="钱将实时转入对方账户，无法退款"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:textSize="@dimen/text_12sp"
        android:textColor="#CCCCCC"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/btn_transfer_next"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_14sp"
        android:background="@drawable/bg_register_btn_selector"
        android:layout_height="40dp" />


</LinearLayout>
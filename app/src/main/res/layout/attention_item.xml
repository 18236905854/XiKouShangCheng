<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="42dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:id="@+id/iv_attention_item_icon"
        android:layout_height="42dp" />

    <TextView
        android:id="@+id/tv_attention_item_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="14sp"
        android:textColor="@color/color_text"
        android:layout_toRightOf="@id/iv_attention_item_icon"
        android:layout_marginTop="18dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_attention_item_time"
        android:textColor="#999999"
        android:textSize="@dimen/text_12sp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/tv_attention_item_name"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_attention_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_attention_item_cancel"
        android:layout_width="wrap_content"
        android:text="@string/attention_cancel"
        android:textSize="@dimen/text_12sp"
        android:textColor="@drawable/attention_text_color_selector"
        android:background="@drawable/bg_attention_selector"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_height="0.5dp"/>
</RelativeLayout>
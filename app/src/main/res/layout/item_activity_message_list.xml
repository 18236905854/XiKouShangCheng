<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="9dp"
    android:background="@drawable/bg_near_cardview"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message_list_title"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/color_text"
        android:layout_marginTop="22dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_message_list_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content" />
    
    <ImageView
        android:id="@+id/iv_message_list_img"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:scaleType="centerCrop"
        android:layout_height="170dp" />

    <View
        android:layout_width="match_parent"
        android:background="#E4E4E4"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_message_list_time"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:textColor="#CCCCCC"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/message_detail"
            android:textSize="12sp"
            android:drawablePadding="5dp"
            android:textColor="#BB9445"
            android:drawableRight="@drawable/setting_icon_arrow"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_home_cardview"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_cut_recommend_logo"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="110dp"
            android:id="@+id/iv_cut_recommend_logo"
            android:scaleType="centerCrop"
            android:layout_height="110dp" />

        <ImageView
            android:id="@+id/iv_goods_empty"
            android:layout_width="60dp"
            android:visibility="gone"
            android:src="@drawable/ic_goods_empty"
            android:layout_centerInParent="true"
            android:layout_height="60dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_cut_right"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/rl_cut_recommend_logo"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tv_cut_name"
                android:layout_width="wrap_content"
                tools:text="进口单肩包女士Visetos Liz双面用 中号MWP5SVI22德国"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/color_text"
                android:layout_marginTop="14dp"
                android:maxLines="2"
                android:layout_height="@dimen/dp_30" />

            <TextView
                android:id="@+id/tv_cut_success_man"
                android:layout_below="@id/tv_cut_name"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_12sp"
                tools:text="1256人砍价成功"
                android:layout_marginTop="2dp"
                android:textColor="#CCCCCC"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_zhuli_num"
                android:layout_below="@id/tv_cut_success_man"
                android:layout_width="wrap_content"
                tools:text="0人助力"
                android:layout_marginTop="9dp"
                android:textColor="#F94119"
                android:textSize="10sp"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="4dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/bg_hot_kanlide"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_below="@id/tv_zhuli_num"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="#F94119"
                    android:text="¥"
                    android:textSize="10sp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_cut_now_price"
                    android:layout_width="wrap_content"
                    android:text="1078"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textColor="#F94119"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_cut_real_price"
                    android:layout_width="wrap_content"
                    android:text="￥1600"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:textColor="#CCCCCC"
                    android:textSize="10sp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/btn_cut"
                android:layout_width="70dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:stateListAnimator="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:text="我要砍价"
                android:background="@drawable/bg_register_btn_selector"
                android:layout_height="29dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
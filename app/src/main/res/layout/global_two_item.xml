<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_global_two"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_global_two"
            android:layout_width="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_text"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/mq_arrow_right"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_global_type_tow_large"
                android:layout_width="230dp"
                android:scaleType="centerCrop"
                android:layout_height="230dp" />

            <TextView
                android:id="@+id/tv_global_coupon_large"
                android:layout_width="wrap_content"
                android:alpha="0.6"
                android:visibility="gone"
                android:layout_alignRight="@id/iv_global_type_tow_large"
                android:textSize="9sp"
                android:background="@drawable/bg_fight_group_authen"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="230dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_global_type_tow_top"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_global_coupon_top"
                    android:layout_width="wrap_content"
                    android:textSize="9sp"
                    android:alpha="0.6"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_fight_group_authen"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_global_type_tow_bottom"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_global_coupon_bottom"
                    android:layout_width="wrap_content"
                    android:textSize="9sp"
                    android:alpha="0.6"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_fight_group_authen"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="16dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_comment_head"
        android:layout_width="30dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/me_head_icon"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tv_comment_name"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv_comment_head"
        android:layout_marginLeft="10dp"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_12sp"
        android:text="唐俊"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment_time"
        android:layout_toRightOf="@id/iv_comment_head"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_comment_name"
        android:layout_marginTop="3dp"
        android:textSize="10sp"
        android:textColor="#999999"
        android:text="一周前"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_below="@id/tv_comment_time"
        android:layout_alignLeft="@id/tv_comment_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_text"
        android:textSize="@dimen/text_14sp"
        android:layout_marginRight="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment_reply"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_alignLeft="@id/tv_comment_name"
        android:layout_marginTop="10dp"
        android:layout_marginRight="21dp"
        android:textColor="#BB9445"
        android:textSize="@dimen/text_14sp"
        android:layout_below="@id/tv_comment_content"
        android:layout_height="wrap_content" />
    
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="14dp"
        android:background="#E4E4E4"
        android:layout_marginLeft="45dp"
        android:layout_below="@id/tv_comment_reply"
        android:layout_height="0.5dp"/>

</RelativeLayout>
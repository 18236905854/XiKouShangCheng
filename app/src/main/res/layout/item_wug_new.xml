<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:paddingBottom="@dimen/dp_15"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_marginTop="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_wug_goods"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_loading"/>

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="稻草人女包2019新款时尚百搭可爱..."
            android:textColor="#444444"
            android:textSize="@dimen/text_12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <LinearLayout
                android:id="@+id/ll_wg_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money"
                    android:textColor="@color/price"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/tv_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="222"
                    android:textColor="@color/price"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_gift_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@id/ll_wg_price"
                android:layout_marginTop="7dp"
                android:background="@drawable/bg_gift_coupon"
                android:paddingLeft="2dp"
                android:paddingTop="1dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                tools:text="赠券200"
                android:textColor="#F94119"
                android:textSize="9sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_marginTop="11dp"
        android:layout_width="0.5dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@id/ll"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@color/line" />

</RelativeLayout>
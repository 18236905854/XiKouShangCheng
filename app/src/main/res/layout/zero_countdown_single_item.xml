<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="230dp"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_home_cardview">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_zero_countdown_logo"
        app:riv_corner_radius_top_left="7dp"
        app:riv_corner_radius_top_right="7dp"
        android:layout_width="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_loading"
        android:layout_height="230dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_zero_countdown_name"
        android:maxLines="2"
        android:textSize="@dimen/text_14sp"
        android:textColor="@color/color_text"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        tools:text="Five Plus2019新款女夏装蕾丝连衣裙两件套装宽松短裙子..."
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:textColor="#F94119"
            android:text="¥"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_zero_countdown_price"
            android:layout_width="wrap_content"
            android:text="0"
            android:textColor="#F94119"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
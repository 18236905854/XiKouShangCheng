<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_order_list_item"
    android:paddingBottom="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_many_buy_order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_many_buy_order_list_num"
            android:layout_width="wrap_content"
            android:text="商品总计:3件"
            android:textSize="10sp"
            android:layout_toLeftOf="@id/tv_many_buy_order_list_money"
            android:textColor="@color/color_text"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_many_buy_order_list_money"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/tv_many_buy_order_list_postage"
            android:textSize="10sp"
            android:text="订单总额:¥139.00"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/color_text"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_many_buy_order_list_postage"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:text="邮费:¥2"
            android:textColor="@color/color_text"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_list_right"
            android:layout_width="75dp"
            android:layout_alignParentRight="true"
            android:text="立即付款"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_12sp"
            android:background="@drawable/bg_btn_order_black"
            android:layout_height="29dp" />

        <TextView
            android:id="@+id/tv_order_list_center"
            android:layout_width="75dp"
            android:layout_toLeftOf="@id/tv_order_list_right"
            android:text="取消订单"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="#999999"
            android:textSize="@dimen/text_12sp"
            android:background="@drawable/bg_btn_order_gray"
            android:layout_height="29dp" />

    </RelativeLayout>

</LinearLayout>